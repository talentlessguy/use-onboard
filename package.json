  "author": "v1rtl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talentlessguy/use-onboard/issues"
  },
  "homepage": "https://github.com/talentlessguy/use-onboard#readme",
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "bnc-onboard": "1.33",
    "esbuild-node-loader": "^0.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.3.1",
    "typescript": "4.3",
    "@ethersproject/providers": ">=5.4"
  },
  "peerDependencies": {
    "bnc-onboard": ">=1",
    "react": ">=17",
    "@ethersproject/providers": ">=5.4"
  },
  "files": [
    "dist"
  ],
  "funding": {
    "type": "individual",
    "url": "https://github.com/talentlessguy/use-onboard?sponsor=1"
